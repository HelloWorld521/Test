<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title></title>
		<style type="text/css">
		*{
			margin: 0;
			padding: 0;
		}
		div{
			width:200px;
			height: 100px;
			background-color: rgba(0,0,100,0.3);
			margin-bottom: 20px;
		}	
		/*#div1:hover{
			background-color: rgba(0,0,100,0.7);
		}
		*/
		</style>
		<script type="text/javascript">
			window.onload=function() {
				var oDiv=document.getElementsByTagName('div');
				for(var i=0;i<oDiv.length;i++){
				oDiv[i].onmouseover=function(){
					starMove(this,0.7);
				}
				oDiv[i].onmouseout=function(){
					starMove(this,0.3);
				}
				}
			}
			function starMove (obj,alpha) {
				obj.style.backgroundColor="rgba(0,0,100,"+alpha+")";
			}
		</script>
	</head>
	<body>
	<div></div>
	<div></div>
	<div></div>
